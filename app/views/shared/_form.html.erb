    <div>
        <%= form.label :suburb %>
        <%= form.text_field :suburb %>
    </div>
    <div>
        <%= form.label :state %>
        <%= form.text_field :state %>
    </div>
        <div>
        <%= form.label :postcode %>
        <%= form.text_field :postcode %>
    </div>
-->





  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

    <div>
        <%= form.label :pic %>
        <%= form.file_field :pic, accept: "image/png, image/gif, image/jpeg, image/jpg, image/JPG" %>
    </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
